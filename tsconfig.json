{
	"version": "2.5.2",
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"allowJs": false,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": false,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"jsx": "preserve",
		"strictNullChecks": true,
		"removeComments": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}